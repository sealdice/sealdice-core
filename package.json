{
  "name": "@sealdice/sealdice-monorepo",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "pnpm": ">=10"
  },
  "homepage": "https://sealdice.com",
  "keywords": [
    "sealdice"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sealdice/sealdice-core.git"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "check:versions": "syncpack list-mismatches",
    "fix:versions": "syncpack fix-mismatches",
    "dev:ui": "pnpm -r --filter='./ui' run dev",
    "dev:manual": "pnpm -r --filter='./manual' run docs:dev",
    "dev:story-painter": "pnpm -r --filter='./story-painter' run dev",
    "dev:verify": "pnpm -r --filter='./verify' run dev",
    "build:core": "cd core && go build .",
    "build:ui": "pnpm -r --filter='./ui' run build-only",
    "build:manual": "pnpm -r --filter='./manual' run docs:build",
    "build:story-painter": "pnpm -r --filter='./story-painter' run build-only",
    "build:verify": "pnpm -r --filter='./verify' run build-only"
  },
  "workspaces": [
    "ui",
    "manual",
    "story-painter",
    "verify"
  ],
  "dependencies": {
    "@vueuse/core": "^13.9.0",
    "axios": "^1.12.2",
    "dayjs": "^1.11.18",
    "lodash-es": "^4.17.21",
    "pinia": "^3.0.3",
    "vue": "^3.5.21",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/carbon": "^1.2.13",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^24.5.2",
    "@vitejs/plugin-legacy": "^7.2.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "eslint": "^9.35.0",
    "iconify-icon": "^3.0.1",
    "naive-ui": "^2.43.1",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "postcss-nested": "^7.0.2",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "syncpack": "^13.0.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.44.0",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-icons": "^22.3.0",
    "unplugin-vue-components": "^29.0.0",
    "vite": "^7.1.6",
    "vue-tsc": "^3.0.7"
  }
}